# Agri Fintech & Insurance - Environment Variables
# Copy this file to .env and update with your actual values

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/agri-fintech
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agri-fintech
MONGODB_URI=mongodb://localhost:27010/agri-fintech

# JWT Secret Key
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5500
